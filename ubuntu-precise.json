{
  "variables": {
    "name": "ubuntu-precise",
    "disk_size": 8192,
    "mirror": "http://mirror.globo.com/ubuntu/releases"
  },
  "builders": [
    {
      "vm_name": "{{ user `name` }}",
      "type": "virtualbox-iso",
      "disk_size": "{{ user `disk_size` }}",
      "output_directory": "{{ user `name` }}-virtualbox",
      "headless": false,
      "guest_os_type": "Ubuntu_64",
      "guest_additions_path": "VBoxGuestAdditions_{{ .Version }}.iso",
      "iso_checksum": "b802bb065df98c0530d782eb94778c2da19e10d6",
      "iso_checksum_type": "sha1",
      "iso_url": "{{ user `mirror` }}/12.04/ubuntu-12.04.4-server-amd64.iso",
      "http_directory": "http",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_domain=vm<wait>",
        " netcfg/get_hostname={{ .Name }}<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu-12.04/preseed.cfg<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "shutdown_command": "sudo -S shutdown -P now",
      "ssh_password": "ubuntu",
      "ssh_username": "ubuntu",
      "vboxmanage": [
        [
          "modifyvm",
          "{{ .Name }}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--cpus",
          "2"
        ]
      ]
    },
    {
      "vm_name": "{{ user `name` }}",
      "type": "qemu",
      "disk_size": "{{ user `disk_size` }}",
      "format": "qcow2",
      "output_directory": "{{ user `name` }}-qemu",
      "headless": true,
      "iso_checksum": "b802bb065df98c0530d782eb94778c2da19e10d6",
      "iso_checksum_type": "sha1",
      "iso_url": "{{ user `mirror` }}/12.04/ubuntu-12.04.4-server-amd64.iso",
      "http_directory": "http",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_domain=vm<wait>",
        " netcfg/get_hostname={{ .Name }}<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu-12.04/preseed.cfg<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "shutdown_command": "sudo -S shutdown -P now",
      "ssh_password": "ubuntu",
      "ssh_username": "ubuntu",
      "ssh_wait_timeout": "10000s",
      "accelerator": "kvm",
      "qemuargs": [
        [
          "-m",
          "1024M"
        ],
        [
          "-cpu",
          "host"
        ],
        [
          "-smp",
          2
        ]
      ]
    },
    {
      "type": "amazon-ebs",
      "ami_name": "{{ user `name` }}-{{ timestamp }}",
      "ami_description": "Packer generated AMI",
      "launch_block_device_mappings": [
        {
          "delete_on_termination": true,
          "device_name": "/dev/sda1",
          "volume_size": 20,
          "volume_type": "standard"
        },
        {
          "device_name": "/dev/sdb",
          "virtual_name": "ephemeral0"
        }
      ],
      "region": "us-west-1",
      "instance_type": "c3.xlarge",
      "source_ami": "ami-660c3023",
      "ssh_username": "ubuntu"
    }
  ],
  "provisioners": [
    {
      "except": [
        "amazon-ebs"
      ],
      "execute_command": "echo 'ubuntu' | {{ .Vars }} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/ubuntu/non-aws.sh",
      "type": "shell"
    },
    {
      "execute_command": "echo 'ubuntu' | {{ .Vars }} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "scripts/ubuntu/dist-upgrade.sh"
      ],
      "type": "shell"
    },
    {
      "execute_command": "echo 'ubuntu' | {{ .Vars }} sudo -S -E bash '{{.Path}}'",
      "pause_before": "40s",
      "scripts": [
        "scripts/ubuntu/base.sh"
      ],
      "type": "shell"
    },
    {
      "except": [
        "amazon-ebs"
      ],
      "execute_command": "echo 'ubuntu' | {{ .Vars }} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/ubuntu/networking.sh",
      "type": "shell"
    },
    {
      "execute_command": "echo 'ubuntu' | {{ .Vars }} sudo -S -E bash '{{.Path}}'",
      "only": [
        "virtualbox-iso"
      ],
      "scripts": [
        "scripts/common/vagrant.sh",
        "scripts/common/vboxga.sh",
        "scripts/common/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "post-processors": [
    {
      "only": [
        "virtualbox-iso"
      ],
      "output": "./builds/{{ .Provider }}/{{ user `name` }}.box",
      "type": "vagrant",
      "vagrantfile_template": "templates/ubuntu-precise.template"
    }
  ]
}
