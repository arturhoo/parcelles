{
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_domain=vm<wait>",
        " netcfg/get_hostname={{.Name}}<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu-12.04/preseed.cfg<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "disk_size": 8192,
      "guest_additions_path": "VBoxGuestAdditions_{{ .Version }}.iso",
      "guest_os_type": "Ubuntu_64",
      "headless": false,
      "http_directory": "http",
      "iso_checksum": "b802bb065df98c0530d782eb94778c2da19e10d6",
      "iso_checksum_type": "sha1",
      "iso_url": "{{user `mirror`}}/12.04/ubuntu-12.04.4-server-amd64.iso",
      "shutdown_command": "sudo -S shutdown -P now",
      "ssh_password": "ubuntu",
      "ssh_username": "ubuntu",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ],
      "vm_name": "parcelles-ruby-mysql"
    },
    {
      "accelerator": "kvm",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_domain=vm<wait>",
        " netcfg/get_hostname={{.Name}}<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu-12.04/preseed.cfg<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "disk_size": 8192,
      "format": "qcow2",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "b802bb065df98c0530d782eb94778c2da19e10d6",
      "iso_checksum_type": "sha1",
      "iso_url": "{{user `mirror`}}/12.04/ubuntu-12.04.4-server-amd64.iso",
      "qemuargs": [
        [
          "-m",
          "1024M"
        ],
        [
          "-cpu",
          "host"
        ],
        [
          "-smp",
          2
        ]
      ],
      "shutdown_command": "sudo poweroff",
      "ssh_password": "ubuntu",
      "ssh_username": "ubuntu",
      "ssh_wait_timeout": "10000s",
      "type": "qemu",
      "vm_name": "parcelles-ruby-mysql"
    },
    {
      "ami_description": "Packer generated AMI",
      "ami_name": "parcelles-ruby-mysql-{{ timestamp }}",
      "instance_type": "c3.large",
      "launch_block_device_mappings": [
        {
          "delete_on_termination": true,
          "device_name": "/dev/sda1",
          "volume_size": 20,
          "volume_type": "standard"
        },
        {
          "device_name": "/dev/sdb",
          "virtual_name": "ephemeral0"
        },
        {
          "delete_on_termination": true,
          "device_name": "/dev/sdf",
          "volume_size": 10,
          "volume_type": "standard"
        },
        {
          "delete_on_termination": true,
          "device_name": "/dev/sdg",
          "volume_size": 10,
          "volume_type": "standard"
        }
      ],
      "region": "us-west-1",
      "source_ami": "ami-fe002cbb",
      "ssh_username": "ubuntu",
      "type": "amazon-ebs"
    }
  ],
  "post-processors": [
    {
      "only": [
        "virtualbox-iso"
      ],
      "output": "./builds/{{.Provider}}/parcelles-ruby-mysql.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "except": [
        "amazon-ebs"
      ],
      "execute_command": "echo 'ubuntu' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/ubuntu/non-aws.sh",
      "type": "shell"
    },
    {
      "execute_command": "echo 'ubuntu' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "scripts/ubuntu/dist-upgrade.sh"
      ],
      "type": "shell"
    },
    {
      "environment_vars": [
        "rubies='{{user `rubies`}}'"
      ],
      "execute_command": "echo 'ubuntu' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "pause_before": "30s",
      "scripts": [
        "scripts/ubuntu/base.sh",
        "scripts/ubuntu/networking.sh",
        "scripts/ubuntu/nginx.sh",
        "scripts/ubuntu/rbenv.sh",
        "scripts/ubuntu/ruby.sh",
        "scripts/ubuntu/mysql.sh"
      ],
      "type": "shell"
    },
    {
      "execute_command": "echo 'ubuntu' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "only": [
        "virtualbox-iso"
      ],
      "scripts": [
        "scripts/ubuntu/vagrant.sh",
        "scripts/ubuntu/vboxga.sh",
        "scripts/common/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "mirror": "http://mirror.globo.com/ubuntu/releases",
    "rubies": "2.1.1 2.1.0 2.0.0-p451 1.9.3-p484"
  }
}

