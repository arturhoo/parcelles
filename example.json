    {
      "override": {
        "amazon-ebs": {
          "execute_command": "sudo bash {{ .Path }}",
          "scripts": [
            "scripts/partition.sh",
            "scripts/puppet.sh"
          ]
        },
        "qemu": {
          "execute_command": "echo 'ubuntu' | sudo -S bash {{ .Path }}",
          "scripts": [
            "scripts/non-aws.sh",
            "scripts/puppet.sh"
          ]
        },
        "virtualbox-iso": {
          "execute_command": "echo 'ubuntu' | sudo -S bash {{ .Path }}",
          "scripts": [
            "scripts/non-aws.sh",
            "scripts/puppet.sh"
          ]
        }
      },
      "type": "shell"
    },
    {
      "hiera_config_path": "puppet/hiera.yaml",
