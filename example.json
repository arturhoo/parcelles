      "iso_checksum_type": "sha1",
      "iso_url": "{{user `mirror`}}/12.04/ubuntu-12.04.4-server-amd64.iso",
      "qemuargs": [
        [
          "-m",
          "1024M"
        ],
        [
          "-cpu",
          "host"
