{
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_domain=vm<wait>",
        " netcfg/get_hostname={{ .Name }}<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu-12.04/preseed.cfg<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "disk_size": "{{ user `disk_size` }}",
      "guest_additions_path": "VBoxGuestAdditions_{{ .Version }}.iso",
      "guest_os_type": "Ubuntu_64",
      "headless": false,
      "http_directory": "http",
      "iso_checksum": "b802bb065df98c0530d782eb94778c2da19e10d6",
      "iso_checksum_type": "sha1",
      "iso_url": "{{ user `mirror` }}/12.04/ubuntu-12.04.4-server-amd64.iso",
      "output_directory": "{{ user `name` }}-virtualbox",
      "shutdown_command": "sudo -S shutdown -P now",
      "ssh_password": "ubuntu",
      "ssh_username": "ubuntu",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{ .Name }}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--cpus",
          "2"
        ]
      ],
      "vm_name": "{{ user `name` }}"
    },
    {
      "accelerator": "kvm",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_domain=vm<wait>",
        " netcfg/get_hostname={{ .Name }}<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu-12.04/preseed.cfg<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "disk_size": "{{ user `disk_size` }}",
      "format": "qcow2",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "b802bb065df98c0530d782eb94778c2da19e10d6",
      "iso_checksum_type": "sha1",
      "iso_url": "{{ user `mirror` }}/12.04/ubuntu-12.04.4-server-amd64.iso",
      "output_directory": "{{ user `name` }}-qemu",
      "qemuargs": [
        [
          "-m",
          "1024M"
        ],
        [
          "-cpu",
          "host"
        ],
        [
          "-smp",
          2
        ]
      ],
      "shutdown_command": "sudo -S shutdown -P now",
      "ssh_password": "ubuntu",
      "ssh_username": "ubuntu",
      "ssh_wait_timeout": "10000s",
      "type": "qemu",
      "vm_name": "{{ user `name` }}"
    },
    {
      "ami_description": "Packer generated AMI",
      "ami_name": "{{ user `name` }}-{{ timestamp }}",
      "instance_type": "c3.xlarge",
      "launch_block_device_mappings": [
        {
          "delete_on_termination": true,
          "device_name": "/dev/sda1",
          "volume_size": 20,
          "volume_type": "standard"
        },
        {
          "device_name": "/dev/sdb",
          "virtual_name": "ephemeral0"
        },
        {
          "delete_on_termination": true,
          "device_name": "/dev/sdf",
          "volume_size": 20,
          "volume_type": "standard"
        }
      ],
      "region": "us-west-1",
      "source_ami": "ami-660c3023",
      "ssh_username": "ubuntu",
      "type": "amazon-ebs"
    }
  ],
  "post-processors": [
    {
      "only": [
        "virtualbox-iso"
      ],
      "output": "./builds/{{ .Provider }}/{{ user `name` }}.box",
      "type": "vagrant",
      "vagrantfile_template": "templates/ubuntu-precise.template"
    }
  ],
  "provisioners": [
    {
      "except": [
        "amazon-ebs"
      ],
      "execute_command": "echo 'ubuntu' | {{ .Vars }} sudo -S -E bash '{{ .Path }}'",
      "script": "scripts/ubuntu/non-aws.sh",
      "type": "shell"
    },
    {
      "execute_command": "echo 'ubuntu' | {{ .Vars }} sudo -S -E bash '{{ .Path }}'",
      "scripts": [
        "scripts/ubuntu/dist-upgrade.sh"
      ],
      "type": "shell"
    },
    {
      "destination": "/tmp/nginx.conf",
      "pause_before": "40s",
      "source": "templates/nginx.conf.template",
      "type": "file"
    },
    {
      "destination": "/tmp/authorized_keys",
      "pause_before": "40s",
      "source": "templates/{{user `authorized_keys_template`}}",
      "type": "file"
    },
    {
      "environment_vars": [
        "rubies='{{user `rubies`}}'"
      ],
      "execute_command": "echo 'ubuntu' | {{ .Vars }} sudo -S -E bash '{{ .Path }}'",
      "scripts": [
        "scripts/ubuntu/base.sh",
        "scripts/common/authorized_keys.sh",
        "scripts/ubuntu/java.sh",
        "scripts/ubuntu/nginx.sh",
        "scripts/ubuntu/rbenv.sh",
        "scripts/common/ruby.sh"
      ],
      "type": "shell"
    },
    {
      "execute_command": "echo 'ubuntu' | {{.Vars}} sudo -S -E bash '{{ .Path }}'",
      "override": {
        "amazon-ebs": {
          "scripts": [
            "scripts/ubuntu/mysql-aws.sh",
            "scripts/ubuntu/mysql.sh"
          ]
        }
      },
      "scripts": [
        "scripts/ubuntu/mysql.sh"
      ],
      "type": "shell"
    },
    {
      "except": [
        "amazon-ebs"
      ],
      "execute_command": "echo 'ubuntu' | {{ .Vars }} sudo -S -E bash '{{ .Path }}'",
      "script": "scripts/ubuntu/networking.sh",
      "type": "shell"
    },
    {
      "execute_command": "echo 'ubuntu' | {{ .Vars }} sudo -S -E bash '{{ .Path }}'",
      "only": [
        "virtualbox-iso"
      ],
      "scripts": [
        "scripts/common/vagrant.sh",
        "scripts/common/vboxga.sh",
        "scripts/common/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "authorized_keys_template": "authorized_keys.template.example",
    "disk_size": 8192,
    "mirror": "http://mirror.globo.com/ubuntu/releases",
    "name": "ubuntu-precise-ruby-mysql",
    "rubies": "2.1.1 2.1.0 2.0.0-p451 1.9.3-p484"
  }
}

